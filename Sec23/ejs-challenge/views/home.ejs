<%- include("partials/header") -%>

   <h1>Home</h1>
   <p>
      <%= contentText %>
   </p>

   <% posts.forEach(function(singlePost) { %>
      <div>
         <h1>
            <%= singlePost.title %>
         </h1>
         <p>
            <% if(singlePost.body.length>= 100){ %>
               <%= singlePost.body.substring(0,100) %>...
                  <% } else { %>
                     <%= singlePost.body %>
                        <% } %>
                           <a href="/posts/<%=singlePost.title.replace(/\s+/g, '-' ).toLowerCase()%>">Read More</a>
         </p>
      </div>
      <% }) %>

         <%- include("partials/footer") -%>